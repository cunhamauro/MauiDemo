<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.StackLayoutDemo"
             Title="StackLayoutDemo">

    <VerticalStackLayout Margin="20" HorizontalOptions="Start">
        
        <HorizontalStackLayout>
            <Label Text="Nome"></Label>
            <Entry WidthRequest="150" HeightRequest="30"></Entry>
            <Label Text="Insira o nome" TextColor="Red"></Label>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Idade"></Label>
            <Entry WidthRequest="150" HeightRequest="30"></Entry>
            <Label Text="Insira a idade" TextColor="Red"></Label>
        </HorizontalStackLayout>

    </VerticalStackLayout>
    
</ContentPage>