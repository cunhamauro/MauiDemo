<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.TabbedPageDemo"
             Title="TabbedPageDemo">

    <ContentPage Title="Pagina 1"
                 BackgroundColor="Yellow"
                 IconImageSource="settings.svg">

        <Label Text="Pagina 1"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

    </ContentPage>

    <ContentPage Title="Pagina 2"
                 BackgroundColor="Green"
                 IconImageSource="trash.svg">

        <Label Text="Pagina 2"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

    </ContentPage>

    <ContentPage Title="Pagina 3"
                 BackgroundColor="Red"
                 IconImageSource="plus.svg">

        <Label Text="Pagina 3"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

    </ContentPage>

    <ContentPage Title="Pagina 4"
                 BackgroundColor="Blue"
                 IconImageSource="dotnet_bot.svg">

        <Label Text="Pagina 4"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

    </ContentPage>

</TabbedPage>